<%= form_for :payload, url: {action: "update", params: {id: @payload.uuid}}, method: "patch" do |form| %>
  <div class="form-group">
    <%= form.label :file %>
    <%= form.file_field :file %>
  </div>
  <div class="form-group">
    <%= form.label :descr %>
    <%= form.text_area :descr, :class=>"form-control" %>
  </div>
  <%= form.hidden_field :uploaded_at, :value => Time.now %>
  <button type="submit" class="btn btn-primary">Submit</button>
<% end %>